<%- include("partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Sell Stocks</h1>
		<div style="width:30% ;margin : 0 auto;">
			<form action="/<%=currentUser._id%>/buy/<%= portfolio.stock.id%>?_method=PUT" method="POST">
				<h4>You have <%=portfolio.quantity%> stocks of <%=portfolio.stock.name%> available</h4>
				<div class="form-group"><input class="form-control" type="text" name="quantity" placeholder="quantity"></div>
				<div class="form-group"><button class="btn btn-lg btn-primary btn-block">Sell Stock</button></div>
			</form>	
		</div>
	</div>
</div>
<%- include("partials/footer") %>