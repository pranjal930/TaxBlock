<%- include("partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Buy Stocks</h1>
		<div style="width:30% ;margin : 0 auto;">
			
			<form action="/<%=currentUser._id%>/buy/<%=stock._id%>" method="POST">
				<h4>Enter the amount of <%=stock.name%> (price:-<%=stock.price%> )stocks you want to buy</h4>
				<div class="form-group"><input class="form-control" type="text" name="quantity" placeholder="quantity"></div>
				<div class="form-group"><button class="btn btn-lg btn-primary btn-block">Add Stock</button></div>
			</form>	
		</div>
	</div>
</div>
<%- include("partials/footer") %>